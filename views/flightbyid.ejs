<style>
    .maincontainer {
        width: 100vw;
        height: 100vh;
        background: #075050;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .box {
        width: 50%;
        height: auto;
        background: rgb(239, 225, 204);
        padding: 10px;
        border-radius: 15px;
    }

    .heading {
        font-size: 24px;
        font-weight: bold;
        letter-spacing: 0.5px;
        color: #075050;
        display: flex;
        flex-direction: row;
        padding-top: 10px;
        padding-bottom: 5px;
    }

    .daysstyle {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
    }

    .btnstyle {
        width: 100%;
    }
</style>
<html>

<head>
    <title>Flight Interface</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="/javascripts/project.js"></script>
    <script>
        $(document).ready(function(){
            var dbdays = $('#dbdays').val().split(",")
            $('.days').map((i,item)=>{
                dbdays.map((d)=>{
                    if($(item).val()==d){
                        $(item).prop('checked',true)
                    }
                })
            })
        })
    </script>
</head>

<body>
    <div class="maincontainer">
        <div class="box">
            <div class="heading">
                <a href="/flight/displayall"><img src="/images/list.png" width="30" height="35" alt=""></a>
                <img src="/images/flighticon.png" alt="icon" width="50">
                Edit Details
            </div>
            <form action="/flight/flightedit_delete" method="post" class="row g-3">
                <input type="hidden" id="dbdays" value="<%=data.days%>">
                <input type="hidden" name="flightid" value="<%=data.flightid%>">
                <div class="col-md-6">
                    <label for="flightname" class="form-label"><b>Flight Name</b></label>>"
                    <input type="text" name="flightname" class="form-control" id="flightname"
                        value="<%=data.flightname%>">

                </div>
                <div class="col-md-6">
                    <label for="flighttype" class="form-label"><b>Flight Type</b></label>
                    <select id="flighttype" name="flighttype" class="form-select">
                        <option>
                            <%=data.type%>
                        </option>
                        <option>Economy</option>
                        <option>Business</option>
                        <option>Economy/Business</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="noofseats" class="form-label"><b>Number Of Seats</b></label>
                    <input type="text" name="noofseats" value="<%=data.totalseats%>" class="form-control"
                        id="noofseats">
                </div>
                <div class="col-md-8">
                    <label for="days" class="form-label"><b>Select Days --</b></label>
                    <div class="daysstyle">
                        <span class="form-check form-check-inline">

                            <input class="form-check-input days" type="checkbox" id="days" name="days" value="Sun">
                            <label class="form-check-label" for="days">Sun</label>
                        </span>
                        <span class="form-check form-check-inline">
                            <input class="form-check-input days" type="checkbox" id="days" name="days" value="Mon">
                            <label class="form-check-label" for="days">Mon</label>
                        </span>
                        <span class="form-check form-check-inline">

                            <input class="form-check-input days" type="checkbox" id="days" name="days" value="Tues">
                            <label class="form-check-label" for="days">Tues</label>
                        </span>
                        <span class="form-check form-check-inline">

                            <input class="form-check-input days" type="checkbox" id="days" name="days" value="Wed">
                            <label class="form-check-label" for="days">Wed</label>
                        </span>
                        <span class="form-check form-check-inline">

                            <input class="form-check-input days" type="checkbox" id="days" name="days" value="Thur">
                            <label class="form-check-label" for="days">Thur</label>
                        </span>
                        <span class="form-check form-check-inline">

                            <input class="form-check-input days" type="checkbox" id="days" name="days" value="Fri">
                            <label class="form-check-label" for="days">Fri</label>
                        </span>
                        <span class="form-check form-check-inline">

                            <input class="form-check-input days" type="checkbox" id="days" name="days" value="Sat">
                            <label class="form-check-label" for="days">Sat</label>
                        </span>
                    </div>
                </div>
                <div class="col-md-3">
                    <label for="sourcecity" class="form-label"><b>Source</b></label>
                    <select id="sourcecity" name="sourcecity" class="form-select">
                        <option value="<%=data.sourcecity%>">
                            <%=data.source%>
                        </option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="deptime" class="form-label"><b>Departure Time</b></label>
                    <input type="time" value="<%=data.departuretime%>" name="deptime" class="form-control" id="deptime">
                </div>
                <div class="col-md-3">
                    <label for="destcity" class="form-label"><b>Destination</b></label>
                    <select id="destcity" name="destcity" class="form-select">
                        <option value="<%=data.destcity%>">
                            <%=data.destination%>
                        </option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="arrtime" class="form-label"><b>Arrival Time</b></label>
                    <input type="time" value="<%=data.arrivaltime%>" name="arrtime" class="form-control" id="arrtime">
                </div>
                <div class="col-md-12">
                    <label for="company" class="form-label"><b>Company</b></label>
                    <input type="text" value="<%=data.company%>" name="company" class="form-control" id="company">
                </div>

                <div class="col-md-6">
                    <button type="submit" name="btn" value="Edit" class="btn btn-secondary btnstyle">Edit</button>
                </div>
                <div class="col-md-6">
                    <button type="submit" name="btn" value="Delete" class="btn btn-secondary btnstyle">Delete</button>
                </div>

                <div class="col-md-12" style="display: flex; justify-content: center; font-weight: bolder;">
                    <%= message %>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
</body>

</html>