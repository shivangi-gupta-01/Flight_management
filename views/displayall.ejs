<style>
    .maincontainer {
        width: 100vw;
        height: 100vh;
        background: #075050;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .box {
        width: 80%;
        height: auto;
        background: rgb(239, 225, 204);
        padding: 10px;
        border-radius: 15px;
    }

    .heading {
        font-size: 24px;
        font-weight: bold;
        letter-spacing: 0.5px;
        color: #075050;
        display: flex;
        flex-direction: row;
        padding-top: 10px;
        padding-bottom: 5px;
    }

    .daysstyle {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
    }

    .btnstyle {
        width: 100%;
    }
    #table-design{
        border: 1px solid black;
    }
</style>
<html>

<head>
    <title>Flight Interface</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="/javascripts/project.js"></script>
</head>

<body>
    <div class="maincontainer">
        <div class="box">
            <div class="heading">
                <a href="/flight/flightinterface"><img src="/images/add.png" width="30" height="35" alt=""></a>
                <img src="/images/flighticon.png" alt="icon" width="50">
                Lists Of Flights
            </div>
            <table class="table table-hover" id="table-design">
                <thead>
                    <tr>
                        <th scope="col">Flight Name</th>
                        <th scope="col">Days/<br>Seats</th>
                        <th scope="col">Source</th>
                        <th scope="col">Destination</th>
                        <th scope="col">Company</th>
                        <th scope="col">Logo</th>
                        <th scope="col">Edit/Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <% data.map((item)=>{%>
                            <th scope="row">
                                <%=item.flightname %> <br>
                                    <%=item.type %>
                            </th>
                            <td>
                                Seats: <%=item.totalseats %>
                                    <br>
                                    <%=item.days %>
                            </td>
                            <td>
                                <%=item.source %>
                                    <br>
                                    <%=item.departuretime %>
                            </td>
                            <td>
                                <%=item.destination%>
                                    <br>
                                    <%=item.arrivaltime %>
                            </td>
                            <td>
                                <%=item.company %>
                                </td>
                            <td>
                                <a href="/flight/searchbyidforimage?fid=<%=item.flightid%>"><img src="/images/<%=item.logo%>" width="30"></a></td>
                            <td>
                                <a href="/flight/searchbyid?fid=<%=item.flightid%>">Edit/Delete</a></td>
                    </tr>
                    <%}) %>


                        </tr>

                </tbody>
            </table>
        </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
    crossorigin="anonymous"></script>

</html>